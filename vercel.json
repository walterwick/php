{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "rewrites": [
    { "source": "/api/(.*\\.php)$", "destination": "/api/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)\\.html$", "destination": "/$1" }, // .html uzant覺s覺n覺 kald覺r
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
