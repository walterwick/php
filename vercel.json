{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/(.*\\.php)$", "destination": "/api/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron.php",
      "schedule": "0 * * * *"
    }
  ]
}
